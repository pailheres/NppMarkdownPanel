  <!-- Copy all copy-local refs (NuGet + project DLLs) into bin\*\lib -->
  <Target Name="PostBuild_CopyDepsToLib" AfterTargets="Build">
    <!-- 1) Gather everything MSBuild marked as copy-local -->
    <ItemGroup>
      <LibAssemblies Include="@(ReferenceCopyLocalPaths)" />
      <LibAssemblies Remove="$(TargetPath)" />
    </ItemGroup>
    <!-- 2) Create lib\ and copy -->
    <MakeDir Directories="$(TargetDir)lib" />
    <Copy SourceFiles="@(LibAssemblies)" DestinationFolder="$(TargetDir)lib\" SkipUnchangedFiles="true" />
    <!-- 3) Ensure WebView2 native loader is present (x64 path; change to win-x86 if needed) -->
    <ItemGroup>
      <WebView2Loader Include="$(NuGetPackageRoot)microsoft.web.webview2\**\runtimes\win-x64\native\WebView2Loader.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(WebView2Loader)" DestinationFolder="$(TargetDir)lib\" SkipUnchangedFiles="true" Condition="Exists('%(WebView2Loader.Identity)')" />
  </Target>
  <Target Name="InstallToNotepadPP" AfterTargets="Build" Condition="Exists('$(NppRoot)')">
    <Message Importance="high" Text="&gt;&gt;&gt; InstallToNotepadPP → $(NppPluginsDir)" />
    <!-- Stop Notepad++ so files aren’t locked (ignore if not running) -->
    <Exec Command="taskkill /IM notepad++.exe /F" ContinueOnError="true" />
    <!-- Create plugins\<TargetName>\lib -->
    <MakeDir Directories="$(NppPluginsDir)\lib" />
    <!-- Copy main DLL -->
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(NppPluginsDir)" SkipUnchangedFiles="true" />
    <!-- Copy extras if present -->
    <ItemGroup>
      <ExtraFiles Include="$(TargetDir)style.css;$(TargetDir)style-dark.css;$(TargetDir)README.md;$(TargetDir)License.txt" Condition="Exists('%(ExtraFiles.Identity)')" />
    </ItemGroup>
    <Copy SourceFiles="@(ExtraFiles)" DestinationFolder="$(NppPluginsDir)" SkipUnchangedFiles="true" />
    <!-- Copy all dependency DLLs from bin\...\lib\ -->
    <ItemGroup>
      <LibFiles Include="$(TargetDir)lib\**\*.*" Condition="Exists('$(TargetDir)lib')" />
    </ItemGroup>
    <Copy SourceFiles="@(LibFiles)" DestinationFiles="@(LibFiles->'$(NppPluginsDir)\lib\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    <!-- Relaunch Notepad++ -->
    <!--Exec Command="&quot;$(NppRoot)\notepad++.exe&quot;" /-->
  </Target>
